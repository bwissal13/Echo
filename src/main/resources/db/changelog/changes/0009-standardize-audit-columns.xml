    <changeSet id="0009-1" author="bwissal">
        <!-- Add audit columns to refresh_tokens -->
        <addColumn tableName="refresh_tokens">
            <column name="modified_by" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
            <column name="modified_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </addColumn>
    </changeSet>

    <changeSet id="0009-2" author="bwissal">
        <!-- Rename audit columns in tokens table -->
        <preConditions onFail="MARK_RAN">
            <columnExists tableName="tokens" columnName="updated_at"/>
        </preConditions>
        <renameColumn tableName="tokens" 
                     oldColumnName="updated_at" 
                     newColumnName="modified_at" 
                     columnDataType="TIMESTAMP"/>
    </changeSet>

