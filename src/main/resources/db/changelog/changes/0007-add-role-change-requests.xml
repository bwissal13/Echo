<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.24.xsd">

    <changeSet id="7" author="echo01">
        <createTable tableName="role_change_requests">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_role_change_user" references="users(id)"/>
            </column>
            <column name="requested_role" type="varchar(20)">
                <constraints nullable="false"/>
            </column>
            <column name="reason" type="varchar(255)"/>
            <column name="approved" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="processed" type="boolean" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="admin_comment" type="varchar(255)"/>
            <column name="created_at" type="timestamp">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="timestamp"/>
            <column name="created_by" type="varchar(255)"/>
            <column name="modified_by" type="varchar(255)"/>
        </createTable>
    </changeSet>

</databaseChangeLog> 